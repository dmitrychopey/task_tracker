<head>
  <meta charset="utf-8">

  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
  More info: h5bp.com/i/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>TaskTracker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

<%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>
<body>
  <!-- Add your site or application content here -->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">TaskTracker</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class="nav navbar-nav">
          <li class="active"><%=link_to "Users", users_path %></li>
          <li><%=link_to "Projects", projects_path %></li>
          <li><%=link_to "Roles", roles_path %></li>

          <% if user_signed_in? and (current_user.has_role? :superadmin) %>
           <li><%=link_to "Statistics", statistics_path %></li>   
           <% end %>
        </ul>

        <% if user_signed_in? %>      
        <p class="navbar-text navbar-right"> <%= current_user.email %> (<%= current_user.roles.first.name %>)
          <%= link_to('Logout', destroy_user_session_path, :method => :delete, class:"navbar-link") %>  
        </p> 
        <% else %>    
        <p class="navbar-text navbar-right">  
          <%= link_to('Login', new_user_session_path, class:"navbar-link")  %>  
        </p>      
        <% end %>
      </li>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="main-container">
  <div class="main wrapper clearfix">

    <article>
      <header>

      </header>

      <section>
        <%= yield %>
      </section>
      <footer>
      </footer>
    </article>

    <aside>

    </aside>

  </div> <!-- #main -->
</div> <!-- #main-container -->

<footer class="footer">
      <div class="container">
        <p class="text-muted">Place sticky footer content here.</p>
      </div>
    </footer>


 <!-- debug(params) if Rails.env.development? -->


</body>
</html>


